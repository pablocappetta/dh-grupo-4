<!DOCTYPE html>
<html lang="en">
  <%- include ('../../partials/head') %>
  <body>
    <div class="color-fix-desktop-top">
      <%- include ('../../partials/header') %>
    </div>
    <main>
      <div class="class-container-prof">
        <div class = "profile-image-prof">
          <h2 class = "profile-title"> Welcome <%= user.first_name %> <%= user.last_name %></h2>
          <img src = "../img/usersImg/<%= user.image_producer%>" class = "img-prof">
        </div> 

        <div class="main-form-prof">
          <section>
            <div class="main-form-structure-prof">
              <form action="products/create"
                    method="GET"
                    class="register-form-container-prof"
                    enctype="multipart/form-data">
                <p class="form-btn-container">
                  <button type="submit" class="btn-form-signin text-profile">
                    Sell a new product
                  </button>
                </p> 
              </form>

              <form action="products/edit"
                    method="GET"
                    class="register-form-container-prof"
                    enctype="multipart/form-data">
                <p class="form-btn-container">
                  <button type="submit" class="btn-form-signin text-profile">
                    Edit your products
                  </button>
                </p> 
              </form>

              <form action="profile/edit/"
                  method="GET"
                  class="register-form-container-prof"
                  enctype="multipart/form-data">
                <p class="form-btn-container">
                  <button type="submit" class="btn-form-signin text-profile">
                    Edit your profile
                  </button>
                </p> 
              </form>

              <form method="GET" action="/logout" class="register-form-container-prof">
                <p class="form-btn-container">
                  <button type="submit" class="btn-form-signin text-profile">Logout</button>
                </p>
              </form>

            </div>
          </section>
        </div> 
      </div>
    </main>
    <%- include ('../../partials/footer') %>
  </body>
</html>
